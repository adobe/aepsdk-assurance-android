<resources>
    <!-- Base TV Theme -->
    <style name="Theme.Aepsdkassuranceandroid" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/adobe_red</item>
        <item name="colorPrimaryDark">@color/adobe_red_dark</item>
        <item name="colorAccent">@color/adobe_red_light</item>
        <item name="android:windowBackground">@color/tv_background_primary</item>
        <item name="android:colorBackground">@color/tv_background_primary</item>
        <item name="android:textColorPrimary">@color/tv_text_primary</item>
        <item name="android:textColorSecondary">@color/tv_text_secondary</item>
    </style>

    <!-- TV Leanback Theme -->
    <style name="Theme.Leanback" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/adobe_red</item>
        <item name="colorPrimaryDark">@color/adobe_red_dark</item>
        <item name="colorAccent">@color/adobe_red_light</item>
        <item name="android:windowBackground">@color/tv_background_primary</item>
        <item name="android:colorBackground">@color/tv_background_primary</item>
    </style>

    <style name="Theme.Aepsdkassuranceandroid.Leanback" parent="Theme.Leanback">
        <item name="colorPrimary">@color/adobe_red</item>
        <item name="colorPrimaryDark">@color/adobe_red_dark</item>
        <item name="colorAccent">@color/adobe_red_light</item>
        <item name="android:windowBackground">@color/tv_background_primary</item>
        <item name="android:colorBackground">@color/tv_background_primary</item>
    </style>

    <!-- TV Card Style -->
    <style name="TVCardStyle">
        <item name="android:layout_width">@dimen/tv_card_width</item>
        <item name="android:layout_height">@dimen/tv_card_height</item>
        <item name="android:layout_margin">@dimen/tv_card_margin</item>
        <item name="android:background">@color/tv_card_background</item>
        <item name="android:elevation">@dimen/tv_card_elevation</item>
    </style>

    <!-- TV Button Style -->
    <style name="TVButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/tv_button_width</item>
        <item name="android:layout_height">@dimen/tv_button_height</item>
        <item name="android:background">@color/tv_button_primary</item>
        <item name="android:textColor">@color/tv_text_primary</item>
        <item name="android:textSize">@dimen/tv_text_size_medium</item>
        <item name="android:paddingStart">@dimen/tv_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/tv_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/tv_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/tv_button_padding_vertical</item>
    </style>

    <!-- TV Text Styles -->
    <style name="TVTextLarge">
        <item name="android:textSize">@dimen/tv_text_size_large</item>
        <item name="android:textColor">@color/tv_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TVTextMedium">
        <item name="android:textSize">@dimen/tv_text_size_medium</item>
        <item name="android:textColor">@color/tv_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TVTextSmall">
        <item name="android:textSize">@dimen/tv_text_size_small</item>
        <item name="android:textColor">@color/tv_text_tertiary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- TV Navigation Style -->
    <style name="TVNavigationStyle">
        <item name="android:layout_width">@dimen/tv_nav_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/tv_nav_background</item>
        <item name="android:padding">@dimen/tv_nav_item_padding</item>
    </style>
</resources>