<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/adobe_red" />
            <corners android:radius="@dimen/tv_button_corner_radius" />
        </shape>
    </item>
    
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tv_nav_selected" />
            <corners android:radius="@dimen/tv_button_corner_radius" />
        </shape>
    </item>
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/adobe_red_dark" />
            <corners android:radius="@dimen/tv_button_corner_radius" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/tv_button_corner_radius" />
        </shape>
    </item>
</selector> 